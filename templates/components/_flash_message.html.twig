{# Define type-specific styles #}
{% set styles = {
    'success': {
        container: 'bg-green-100 border-green-500 text-green-700 dark:bg-green-200 dark:text-green-800',
        icon: 'text-green-500 dark:text-green-600',
        label: 'Success!'
    },
    'error': {
        container: 'bg-red-100 border-red-500 text-red-700 dark:bg-red-200 dark:text-red-800',
        icon: 'text-red-500 dark:text-red-600',
        label: 'Error!'
    },
    'warning': {
        container: 'bg-yellow-100 border-yellow-500 text-yellow-700 dark:bg-yellow-200 dark:text-yellow-800',
        icon: 'text-yellow-500 dark:text-yellow-600',
        label: 'Warning!'
    },
    'info': {
        container: 'bg-blue-100 border-blue-500 text-blue-700 dark:bg-blue-200 dark:text-blue-800',
        icon: 'text-blue-500 dark:text-blue-600',
        label: 'Info!'
    }
} %}

{# Get styles for current type, default to info if type not specified #}
{% set currentStyle = styles[type|default('info')] %}

<div 
    data-controller="flash-messages"
    class="flex p-4 mb-4 text-sm rounded-lg border w-96 {{ currentStyle.container }}"
    role="alert"
>
    <div class="flex-1">
        <div class="flex items-center">
            <span class="font-bold mr-2">{{ currentStyle.label }}</span>
            <span>{{ message }}</span>
        </div>
    </div>
    <button 
        type="button"
        class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 focus:ring-gray-400 p-1.5 inline-flex h-8 w-8 {{ currentStyle.icon }}"
        data-action="click->flash-messages#close"
        aria-label="Close"
    >
        <span class="sr-only">Close</span>
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
    </button>
</div>