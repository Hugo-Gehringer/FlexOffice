{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
    <div class="container mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Admin Dashboard</h1>
        </div>

        <div class="bg-white rounded-lg shadow p-6 mb-6 dark:bg-gray-800">
            <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Welcome, {{ currentUser.firstname }} {{ currentUser.lastname }}</h2>
            <p class="text-gray-700 dark:text-gray-300 mb-4">You have full administrative access to the FlexOffice platform. From here, you can manage all users, spaces, and reservations.</p>
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                <span>Last login: {{ 'now'|date('Y-m-d H:i') }}</span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800">
                <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Users</h2>
                <p class="text-3xl font-bold text-blue-600 dark:text-blue-500">{{ userCount }}</p>
                <a href="{{ path('app_admin_users') }}" class="text-blue-600 hover:underline dark:text-blue-500 mt-2 inline-block">View all users</a>
            </div>
            <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800">
                <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Spaces</h2>
                <p class="text-3xl font-bold text-green-600 dark:text-green-500">{{ spaceCount }}</p>
                <a href="{{ path('app_admin_spaces') }}" class="text-green-600 hover:underline dark:text-green-500 mt-2 inline-block">View all spaces</a>
            </div>
            <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800">
                <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">Reservations</h2>
                <p class="text-3xl font-bold text-purple-600 dark:text-purple-500">{{ reservationCount }}</p>
                <a href="{{ path('app_admin_reservations') }}" class="text-purple-600 hover:underline dark:text-purple-500 mt-2 inline-block">View all reservations</a>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800">
            <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Admin Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="{{ path('app_admin_users') }}" class="bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 p-4 rounded-lg flex items-center">
                    <svg class="w-6 h-6 mr-2 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    Manage Users
                </a>
                <a href="{{ path('app_admin_spaces') }}" class="bg-green-100 hover:bg-green-200 dark:bg-green-900 dark:hover:bg-green-800 p-4 rounded-lg flex items-center">
                    <svg class="w-6 h-6 mr-2 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                    Manage Spaces
                </a>
                <a href="{{ path('app_admin_reservations') }}" class="bg-purple-100 hover:bg-purple-200 dark:bg-purple-900 dark:hover:bg-purple-800 p-4 rounded-lg flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    Manage Reservations
                </a>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800 mb-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">System Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                    <h3 class="font-medium text-gray-900 dark:text-white mb-2">Application Status</h3>
                    <div class="flex items-center mb-2">
                        <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
                        <span class="text-sm text-gray-700 dark:text-gray-300">System Online</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
                        <span class="text-sm text-gray-700 dark:text-gray-300">Database Connected</span>
                    </div>
                    <div class="flex items-center">
                        <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
                        <span class="text-sm text-gray-700 dark:text-gray-300">Email Service Active</span>
                    </div>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                    <h3 class="font-medium text-gray-900 dark:text-white mb-2">Server Information</h3>
                    <p class="text-sm text-gray-700 dark:text-gray-300 mb-1">Environment: <span class="font-medium">Production</span></p>
                    <p class="text-sm text-gray-700 dark:text-gray-300 mb-1">PHP Version: <span class="font-medium">8.2</span></p>
                    <p class="text-sm text-gray-700 dark:text-gray-300">Server Time: <span class="font-medium">{{ 'now'|date('Y-m-d H:i:s') }}</span></p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 dark:bg-gray-800">
            <h2 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Recent Activity</h2>
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Action</th>
                            <th scope="col" class="px-6 py-3">User</th>
                            <th scope="col" class="px-6 py-3">Date</th>
                            <th scope="col" class="px-6 py-3">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <td class="px-6 py-4">New Registration</td>
                            <td class="px-6 py-4">john.doe@example.com</td>
                            <td class="px-6 py-4">{{ 'now'|date_modify('-2 hours')|date('Y-m-d H:i') }}</td>
                            <td class="px-6 py-4">User registered as Guest</td>
                        </tr>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <td class="px-6 py-4">New Space</td>
                            <td class="px-6 py-4">host@example.com</td>
                            <td class="px-6 py-4">{{ 'now'|date_modify('-1 day')|date('Y-m-d H:i') }}</td>
                            <td class="px-6 py-4">Created "Coworking Space Downtown"</td>
                        </tr>
                        <tr class="bg-white dark:bg-gray-800">
                            <td class="px-6 py-4">New Reservation</td>
                            <td class="px-6 py-4">guest@example.com</td>
                            <td class="px-6 py-4">{{ 'now'|date_modify('-3 days')|date('Y-m-d H:i') }}</td>
                            <td class="px-6 py-4">Reserved Desk #5 in "Tech Hub"</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="mt-4 text-right">
                <a href="#" class="text-blue-600 hover:underline dark:text-blue-500">View all activity</a>
            </div>
        </div>
    </div>
{% endblock %}
