<div class="address-container">
    <h2 class="address-title">Address Information</h2>
</div>

<div class="address-grid">
    <!-- Street field -->
    <div class="address-form-group">
        {{ form_label(address.street, null, {'label_attr': {'class': 'address-form-label'}}) }}
        <div class="input-container">
            {{ form_widget(address.street, {'attr': {'class': 'address-form-input'}}) }}
        </div>
        {{ form_errors(address.street, {'attr': {'class': 'address-form-error'}}) }}
    </div>

    <!-- City field -->
    <div class="address-form-group">
        {{ form_label(address.city, null, {'label_attr': {'class': 'address-form-label'}}) }}
        <div class="input-container">
            {{ form_widget(address.city, {'attr': {'class': 'address-form-input'}}) }}
        </div>
        {{ form_errors(address.city, {'attr': {'class': 'address-form-error'}}) }}
    </div>
</div>

