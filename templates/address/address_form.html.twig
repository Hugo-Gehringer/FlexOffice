        </div>
        {{ form_errors(address.postalCode, {'attr': {'class': 'address-form-error'}}) }}
    </div>

    <!-- Country field -->
    <div class="address-form-group">
        {{ form_label(address.country, null, {'label_attr': {'class': 'address-form-label'}}) }}
        <div class="input-container">
