# === ENVIRONNEMENT DE PRODUCTION ===
APP_ENV=prod
APP_DEBUG=false
APP_SECRET="secret_prod_exemple"
TAG=

# === BASE DE DONNÉES ===
DATABASE_URL="url_prod_exemple"
# === EMAIL ===
MAILER_DSN=smtp://mailhog:1025

# === LOGS ===
LOG_LEVEL=error
MONOLOG_LOGGING_PATH=/var/www/html/var/log

# === SÉCURITÉ ADDITIONNELLE ===
# Désactiver les fonctions dangereuses
SYMFONY_DEPRECATIONS_HELPER=disabled
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR

# === VARIABLES MÉTIER FLEXOFFICE ===
# Adaptez selon vos besoins applicatifs
FLEXOFFICE_ADMIN_EMAIL=admin@votre-domaine.com
FLEXOFFICE_COMPANY_NAME="Votre Entreprise"
FLEXOFFICE_TIMEZONE=Europe/Paris

# === STOCKAGE FICHIERS ===
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/var/storage

# === API EXTERNE (si applicable) ===
# API_BASE_URL=https://api.votre-service.com
# API_KEY=votre_clé_api_sécurisée